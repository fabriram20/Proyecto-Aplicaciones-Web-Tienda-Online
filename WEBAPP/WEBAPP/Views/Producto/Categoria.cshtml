            <!--Listar Producto-->

            <table class="table table-responsive table-striped center" style="text-align:center;">

                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Foto)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NombreProducto)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Precio)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <img src="~/images/@Html.DisplayFor(modelItem => item.Foto)" style="height: 150px; width: 150px;" alt="Responsive image" class="img-thumbnail">
                        </td>
                        <td>
                            <h4>@Html.DisplayFor(modelItem => item.NombreProducto)</h4>
                        </td>
